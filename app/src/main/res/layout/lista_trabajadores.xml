<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textoListaview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:backgroundTint="#EFEFEF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/headerListaView"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:adjustViewBounds="true"
        android:contentDescription='image main'
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,ImageContrastCheck"
        tools:srcCompat="@color/design_default_color_secondary_variant" />

    <TextView
        android:id="@+id/tituloListaView"
        android:layout_width="406dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:minHeight="48dp"
        android:shadowColor="@color/material_dynamic_neutral0"
        android:text="@string/correo_yuri"
        android:textAlignment="center"
        android:textColor="#E0E0E0"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/headerListaView"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/headerListaView"
        app:layout_constraintTop_toTopOf="@+id/headerListaView"
        tools:ignore="TextSizeCheck"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textoTrabajadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/listado_trabajadores"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerListaView" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="49dp"
        android:layout_height="64dp"
        android:backgroundTint="#018685"
        android:src="@drawable/ic_action_name"
        app:layout_constraintBottom_toBottomOf="@+id/headerListaView"
        app:layout_constraintEnd_toEndOf="@+id/tituloListaView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/headerListaView"
        app:layout_constraintTop_toTopOf="@+id/headerListaView"
        app:layout_constraintVertical_bias="0.392" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="408dp"
        android:layout_height="553dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerListaView"
        app:layout_constraintVertical_bias="1.0">

    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>